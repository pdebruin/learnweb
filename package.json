{
  "name": "@pjmdebruin/learnweb",
  "version": "1.0.0",
  "description": "A web app to interact with Microsoft Learn through Learn MCP Server",
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "web",
    "learn",
    "microsoft-learn"
  ],
  "homepage": "https://pdebruin.github.io/learnweb/",
  "bugs": {
    "url": "https://github.com/pdebruin/learnweb/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pdebruin/learnweb.git"
  },
  "license": "ISC",
  "author": "Pieter de Bruin",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build:client": "esbuild src/index.ts --bundle --format=esm --outfile=dist/index.js --sourcemap",
    "build:copy": "cp src/index.html dist/index.html && cp src/diagnostic.html dist/diagnostic.html",
    "build": "npm run build:client && npm run build:copy",
    "start": "npm run build && npx http-server dist -p 3000 -o",
    "test": "npm run build && jest",
    "prepublishOnly": "npm run build"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.test.ts"
    ]
  },
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@cfworker/json-schema": "^4.1.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.0.1",
    "esbuild": "^0.27.1",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.6",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.24.3"
  }
}
